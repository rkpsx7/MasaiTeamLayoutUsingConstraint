<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnNrupul"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:text="Nrupul"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toStartOf="@+id/btnPrateek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPrateek"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:text="Prateek"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnNrupul"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vView1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnNrupul"/>

    <Button
        android:id="@+id/btnAlbert"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:text="Albert"
        android:layout_margin="40dp"
        app:layout_constraintBottom_toTopOf="@id/btnAman"
        app:layout_constraintTop_toBottomOf="@id/vView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnAman"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:text="Aman"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/btnAlbert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>